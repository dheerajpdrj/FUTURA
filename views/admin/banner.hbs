<div class="main-container">


    <div class="row d-flex ">
        {{#each allbanner}}
        <div class="col-md-5 card mx-auto" style="width: 15rem; margin: 1rem;">

            <img class="card-img-top" src="/product-images/{{this._id}}.jpg" alt="Card image cap" style="width: 80%;">
            <div class="card-body">
                <h5 class="card-title">{{this.Heading}}</h5>
                <p class="card-text">{{this.Description}}</p>
                <a href="/admin/editbanner/{{this._id}}"  class="btn btn-primary">Edit</a>
                <a href="/admin/deletebanner/{{this._id}}" onclick="return confirm('Are You Sure You Want to Delete {{this.Name}}')" class="btn btn-danger">Delete</a>
            </div>
        </div>
        {{/each}}
    </div>

    

</div>




